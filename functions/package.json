    "firebase-functions": "^2.1.0",
    "js-base64": "^2.4.9",
    "jsonschema": "^1.2.4",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "assert": "^1.4.1",
    "firebase-functions-test": "^0.1.6",
    "mocha": "^5.2.0"
  },
  "private": true
}
